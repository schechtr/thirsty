<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/marker_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".MarkerDetailFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/near_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="near "
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="italic"

            />

        <TextView
            android:id="@+id/near_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/near_label"
            android:padding="5sp"
            android:text=""

            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/address_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/near_label"
            android:padding="5sp"
            android:text=""
            android:textSize="15sp"
            android:textStyle="italic" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <ImageView
            android:id="@+id/detail_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/thatOneGrey"
            android:scaleType="fitXY">

        </ImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/marker_detail_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/fountain"
            app:civ_border_color="@android:color/darker_gray"
            app:civ_border_width="2dp"

            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="type: "
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/marker_detail_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_type">

        </com.google.android.material.chip.ChipGroup>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/thatOneGrey"
        android:padding="15dp">


        <TextView
            android:id="@+id/visited_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/visited_text"
            android:text="0"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/visited_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:padding="5sp"
            android:text="visited"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/stars_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="0"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/stars_number"
            android:padding="5sp"
            android:text="starred"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.like.LikeButton
            android:id="@+id/star_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="false"
            app:anim_scale_factor="1.7"
            app:icon_size="60dp"
            app:like_drawable="@drawable/ic_star"
            app:unlike_drawable="@drawable/ic_star_grey" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_report_bg"
            android:src="@drawable/ic_report"
            android:tint="#FADB27" />


    </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>