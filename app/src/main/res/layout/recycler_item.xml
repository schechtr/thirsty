<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/recycler_item_container"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recycler_item_image"
        android:layout_width="80dp"
        android:padding="10dp"
        android:layout_height="80dp"
        android:src="@mipmap/fountain_round" />

    <TextView
        android:id="@+id/recycler_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/recycler_item_image"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:textSize="17sp"
        android:text="Foothill Ranch" />


</RelativeLayout>